---
const { item } = Astro.props;
import Label from "./Label.astro";
import SecondaryButtons from "./SecondaryButtons.astro";
---

<article class="card">
  <a href={`program/${item.slug}`}>
    <div class="image-container">
      <img src={item.image} alt="" />
    </div>
    <div class="container">
      <Label text={item.tag} />
      <h3>{(item.number ? item.number + " " : "") + item.title}</h3>
        {item.description}
      </p>
      <div class="button-container">
          <SecondaryButtons variant={`program/${item.slug}`}/>
      </div>
    </div>
  </a>
</article>

<style>
  a{
    color: var(--text-color);
  }

  .card {
    display: flex;
    flex-direction: column;
    background-color: rgb(37, 37, 37);
    border-radius: 20px;
    padding-bottom: 2em;
    overflow: hidden;
    cursor: pointer;
    position: relative;
    max-width: 400px;

  }

  .button-container {
    position: absolute; /* virker kun fordi card er position: relative, og button-container er indeni. */
    bottom: 3vh;
    right: 2vw;
  }

  .image-container {
    position: relative;
    overflow: hidden;

    height: 100%;
  }

  img {
    width: 100%;
    aspect-ratio: 4/3;

    object-fit: cover;
    border-radius: 20px 20px 0 0;
  }

  .desc, .desc-small {
    font-size: 1rem;
    line-height: 150%;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    padding: 1em 0 0;
  }

  /* .desc-small {
    font-weight: 100;
    font-size: 2rem;
    line-height: 150%;
  } */

  div.container {
    display: flex;
    padding: 0.5em 1.5em 2em;

  }

  .container {
    padding: 0 1.3vw;
  }

  h3 {
    font-family: "noto-sans", sans-serif;
    font-weight: lighter;
    font-size: 2rem
    margin: 0;
  }
  a {
    text-decoration: none;
  }
  .card:hover {
    .arrow {
      left: 16%;
      transition-duration: 0.2s;
      flex-shrink: 0;
    }
  }

  @media (max-width: 766px) {
    .card {
      display: flex;
      flex-direction: column;
      background-color: rgb(37, 37, 37);
      padding-bottom: 2vw;
      border-radius: 25px;
 
      padding-bottom: 2rem;
      overflow: hidden;
      cursor: pointer;
      position: relative;
      margin: 0 2rem 2rem;
    }

    .container {
      padding: 0 4vw;
    }
   
    .button-container {
      position: absolute; /* virker kun fordi card er position: relative, og button-container er indeni. */
      bottom: 2vh;
      right: 2vw;
    }
  
  }
</style>
