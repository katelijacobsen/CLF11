---
const { objekt } = Astro.props;
import Label from "../components/Label.astro";
---

<article class="card">
  <div class="image-container">
    <img src={objekt.image} alt="" />
  </div>
  <div class="container">
    <Label text={objekt.tag} />
    <h3>{(objekt.number ? objekt.number + " " : "") + objekt.title}</h3>
    <p class={objekt.description.length > 300 ? "desc-small" : "desc"}>
      {objekt.description}
    </p>
    <div class="button-container">
      <button>Tryk her</button>
    </div>
  </div>
</article>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background-color: rgb(37, 37, 37);
    padding-bottom: 2vw;
    width: 22vw;
    max-height: 75vh;
    height: 75vh;
    border-radius: 25px;
    color: var(--text-color);
    font-family: "noto-sans", sans-serif;
    padding-bottom: 2vw;
    overflow: hidden;
    cursor: pointer;
    position: relative;
  }

  button {
    border-radius: 1vw;
    max-width: fit-content;
    border-color: aquamarine;
    background-color: transparent;
    color: var(--text-color);
    font-family: "noto-sans", sans-serif;
    font-weight: lighter;
    font-size: 0.9vw;
    padding: 5px 15px 5px 15px;
  }

  .button-container {
    position: absolute; /* virker kun fordi card er position: relative, og button-container er indeni. */
    bottom: 3vh;
    right: 1vw;
  }

  .image-container {
    position: relative;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 35vh;
    object-fit: cover;
    border-radius: 25px;
  }
  p {
    font-family: "noto-sans", sans-serif;
    font-weight: 100;
  }
  .desc {
    font-weight: 100;
    font-size: 0.9vw;
  }

  .desc-small {
    font-weight: 100;
    font-size: 0.75vw;
  }

  .label {
    display: inline-block;
    padding: 2px 8px 2px 8px;
    border-radius: 25px;
    max-width: fit-content;
    background-color: var(--tertiary-color);
    color: var(--text-color);
    filter: brightness(100%) blur(10px)
      drop-shadow(0 0 10px var(--tertiary-color) (255, 255, 255, 0.8));
    box-shadow: 0 0 10px rgba(183, 2, 249, 0.8);
    font-size: 0.6vw;
    font-weight: 100;
    font-family: "noto-sans", sans-serif;
    margin-top: 1.5vw;
    margin-bottom: 1.2vw;
  }
  /*   .container {
    display: flex;
    flex-direction: column;
    padding-left: 20px;
    padding-right: 20px;
    font-weight: lighter;
    row-gap: 0;
    font-family: "noto-sans", sans-serif;
    font-weight: lighter;
  } */

  .container {
    padding: 0 1.3vw;
  }

  h3 {
    font-family: "noto-sans", sans-serif;
    font-weight: lighter;
    font-size: 1.4vw;
    margin: 0;
  }
</style>
