---
const{img, title, description, label} = Astro.props
import "../styles/global.css"

 
---	
    
    <article class="card">
        <div class="image-container">
            <img src={img} alt="">
        </div>
        <div class="container">
            <h3 class="label">{label}</h3>
            <h4><>{title}</h3>
            <p class="desc">{description}</p>
            <button>Tryk her</button>
        </div>
    </article>

<style>
    .card{
        background-color: #161616 ;
        padding-bottom: 2vw;
        width: 18vw;
        height: 28vw; 
        border-radius: 25px;
        color: var(--text-color);
        font-family: "noto-sans", sans-serif;

    }

    
   .image-container {
    position: relative;
    height: 55%; /* Adjust as needed */
    overflow: hidden;
    margin-bottom: 8px;
}

button{
    border-radius: 1vw;
    max-width: fit-content;
    border-color: aquamarine;
    background-color: transparent;
    color: var(--text-color);
    font-family: "noto-sans", sans-serif;
    font-weight: lighter;
    margin-top: 10px;
    margin-right: 10px;
    margin-left: auto;
    font-size: 0.6vw;
    padding: 5px 15px 5px 15px;
}

img {
    width: 100%;
    height: 100%; /* Cover the entire image container */
    object-fit: cover; /* Scale the image while maintaining aspect ratio */
    border-radius: 25px;
}
 p{
    font-family: "noto-sans", sans-serif;
    font-weight: 100;
 }
.desc{
    font-size: 0.6vw;
    margin-top: 12px;
    font-weight:100;

}

    .label{
    display: inline-block;
    padding: 2px 8px 2px 8px;
    border-radius: 25px;
    max-width: fit-content;
    background-color: var(--tertiary-color);
    color: var(--text-color);
    filter: brightness(100%) blur(10px) drop-shadow(0 0 10px var(--tertiary-color) (255, 255, 255, 0.8));
    box-shadow: 0 0 10px rgba(183, 2, 249, 0.8); 
    font-size: 0.5vw;
    font-weight: 100;
    font-family: "noto-sans", sans-serif;
    margin-bottom: 20px ;
}
.container{
    display: flex;
    flex-direction: column;
    padding-left: 20px;
    padding-right: 20px;
    font-weight: lighter;
    row-gap:0;
}
 h4 {
    font-weight: lighter;
    font-size: 1vw;
    margin: 0;
}





 </style>