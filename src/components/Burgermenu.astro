<style>
  .menu-btn {
    width: 44px;
    height: 32px;
    position: relative;
    overflow: hidden;
    z-index: 99;
  }

  .line {
    background-color: white;
    width: 32px;
    height: 2px;
    border-radius: 4px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.3s ease-in-out;
  }

  .line:nth-of-type(2) {
    top: calc(50% - 9px);
  }
  .line:nth-of-type(3) {
    top: calc(50% + 9px);
  }

  /* when menu is open  */
  .menu-btn.active .line:nth-of-type(1) {
    top: 50%;
    transform: translate(-50%, 0%) rotate(45deg);
  }

  .menu-btn.active .line:nth-of-type(2) {
    top: 50%;
    transform: translate(-50%, 0%) rotate(45deg);
  }

  .menu-btn.active .line:nth-of-type(3) {
    top: 50%;
    transform: translate(-50%, 0%) rotate(-45deg);
  }

  /* Actual menu that appears  */
  .globalmenu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-menu);

    transform: translateY(100%);
    transition: transform 0.5s;
  }

  .globalmenu.active {
    transform: translateX(0);
  }

  .nav-link {
    list-style: none;
  }
</style>

