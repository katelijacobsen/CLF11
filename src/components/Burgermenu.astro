<style>
  /* grid area for header placement */
  .lang-menu {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  /* burgermenu area */
  .burgermenu {
    display: inline-flex;
    align-items: center;
    grid-column: 2/-1;
    text-align: end;
    justify-content: end;
  }
  .menu-btn {
    width: 44px;
    height: 32px;
    position: relative;
    overflow: hidden;
    z-index: 99;
  }

  .menu-btn:hover {
    cursor: pointer;
  }

  .line {
    background-color: white;
    width: 32px;
    height: 2px;
    border-radius: 4px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.3s ease-in-out;
  }

  .line:nth-of-type(2) {
    top: calc(50% - 9px);
  }
  .line:nth-of-type(3) {
    top: calc(50% + 9px);
  }

  /* when menu is open  */
  .menu-btn.active .line:nth-of-type(1) {
    top: 50%;
    transform: translate(-50%, 0%) rotate(45deg);
  }

  .menu-btn.active .line:nth-of-type(2) {
    top: 50%;
    transform: translate(-50%, 0%) rotate(45deg);
  }

  .menu-btn.active .line:nth-of-type(3) {
    top: 50%;
    transform: translate(-50%, 0%) rotate(-45deg);
  }

  /* Actual menu that appears  */
  .globalmenu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-menu);

    transform: translateY(-100%);
    transition: transform 0.5s;
  }

  .globalmenu.active {
    transform: translateX(0);
  }

  .nav-link {
    list-style: none;
  }

  /* Menu list styling  */

  ul {
    list-style: none;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  ul li ul {
    display: grid;
    grid-template-columns: 1fr;
    position: absolute;
    top: 30%;
  }

  .nav-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e2045;
    text-transform: uppercase;
  }

  a {
    text-decoration: none;
    letter-spacing: 0.72px;
    color: var(--text-color);
    padding: 2em 0 0;
  }

  a:hover {
    text-decoration: underline 1px;
    text-underline-offset: 4px;
  }
</style>

