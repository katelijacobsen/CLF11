---
import SoMe from "../components/SoMe.astro";
---

<article class="footer">
  <div class="line"></div>
  <div class="grid_1_1_1">
    <div>
      <ul>
        <li><a href="#">Presse og medier</a></li>
        <li><a href="#">FAQ</a></li>
        <li><a href="#">Personoplysninger</a></li>
      </ul>
    </div>
    <div>
      <ul>
        <li><a href="#">Kontakt os</a></li>
        <li>info@copenhagenlightfestival.org</li>
        <li>+45 25 55 66 04</li>
      </ul>
    </div>
    <div class="footer_content">
      <SoMe>
        <a href="https://www.facebook.com/cphlightfest/"
          ><img src="/some-icons/facebook.svg" alt="" /></a
        >
        <a
          href="https://www.youtube.com/channel/UCLxM8I3HMXuXYLtcssa4pdA/videos"
          ><img src="/some-icons/youtube.svg" alt="" /></a
        >
        <a href="https://www.instagram.com/cphlightfest/?hl=da"
          ><img src="/some-icons/instagram.svg" alt="" /></a
        >
      </SoMe>
    </div>
    <div class="company_name">@Copenhagen Light Festival</div>
  </div>
</article>

<style>
  li,
  a,
  .company_name {
    font-family: sans-serif;
    font-size: 1rem;

    font-weight: 100;
    line-height: 150%;
    color: var(--text-color);
    list-style: none;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .line {
    height: 2px;
    margin-bottom: 2rem;
    background-color: var(--text-color);
  }

  @media only screen and (min-width: 646px) {
    .grid_1_1_1 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 1em;
    }
    .footer_content {
      text-align: right;
    }
    .company_name {
      opacity: 0.5;
      text-transform: uppercase;
      grid-column: span 1/-1;
      text-align: end;
      grid-row: 2;
    }
  }

  @media only screen and (max-width: 646px) {
    .grid_1_1_1 {
      padding: 1em;
      display: grid;
      grid-template-columns: 1fr;
      gap: 1em;
    }
    .footer_content {
      text-align: center;
      grid-row-start: 1;
      margin: 0 0 1em;
    }
    .company_name {
      opacity: 0.5;
      text-transform: uppercase;
      text-align: end;
    }
  }
</style>
