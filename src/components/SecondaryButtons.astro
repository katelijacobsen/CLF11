---
const {variant, size} = Astro.props;
---


<a class={variant + " " + size}>
    <div>
        <slot /> 
    <img src="../public/assets/Arrow.svg" alt="Pil">
    </div> 
    </a>
    
<style>
    div {
        color: white;
        border-radius: 60px;
        font-family: "noto-sans", sans-serif;
        font-size: 1rem;
        font-style: normal;
        font-weight: 500;
        line-height: 150%; /* 54px */
        letter-spacing: 1.44px;
        color: var(--text-color);
        border: 4px solid var( --secondary-color);
        display: inline-block;
        align-items: baseline;
        padding: 0.3% 1% 0.3% 1%;
        gap: 10px;
        flex-shrink: 0;
        
    }
    img{
        flex-shrink: 0;
        position: relative;
        left: 0%;
        top: 0%;
        transition-duration: .2s;
    }
    div:hover > img{
        left: 6%;
        transition-duration: .2s;
        flex-shrink: 0;
    }
</style>