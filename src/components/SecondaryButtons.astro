---
const { variant } = Astro.props;
---

<a class={variant}>
  <div>
    <slot />
    <img class="arrow bigger" src="../public/assets/Arrow.svg" alt="Pil" />
  </div>
</a>

<style>
  div {
    color: white;
    border-radius: 60px;
    font-family: "noto-sans", sans-serif;
    font-size: 1rem;
    font-style: normal;
    font-weight: 500;
    line-height: 150%; /* 54px */
    letter-spacing: 1.44px;
    color: var(--text-color);
    border: 0.25vw solid var(--secondary-color);
    display: inline-flex;
    align-items: center;
    padding: 0.5vw 1vw 0.5vw 1vw;
    gap: 10px;
    flex-shrink: 0;
  }
  img {
    width: 2vw;
    flex-shrink: 0;
    position: relative;
    left: 0%;
    top: 0%;
    transition-duration: 0.2s;
  }
  div:hover > img {
    left: 16%;
    transition-duration: 0.2s;
    flex-shrink: 0;
  }
</style>
