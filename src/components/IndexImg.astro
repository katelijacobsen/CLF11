---
const { src } = Astro.props;
---

<section>
  <img src={src} alt="Installation fra festivalen" />
  <div class="border1"></div>
  <div class="border2"></div>
</section>

<style>
  section {
    display: grid;
    grid-template-columns: repeat(5, 160px);
    grid-template-rows: repeat(8, 80px);
    gap: 0px;
  }
  img {
    width:140%;
    grid-column: 2/5;
    grid-row: 6/4;
    border-radius: 30px;
    z-index: 1;
    place-self: center;
  }

  .border1 {
    border: 4px solid var(--secondary-color);
    border-radius: 30px;
    grid-column: 1/6;
    grid-row: 1/8;
    margin: 10% 14% 8% 4% ;
  }
  .border2 {
    border: 4px solid var(--secondary-color);
    border-radius: 30px;
    grid-column: 1/6;
    grid-row: 2/9;
    margin: 8% 4% 10% 14% ;
  }
</style>
