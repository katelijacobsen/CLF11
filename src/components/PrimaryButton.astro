---
const {variant, size} = Astro.props;
---


<a class={variant + " " + size}>
    <div class="container">
        <slot /> 
    <img src="../public/assets/Arrow.svg" alt="Pil">
    <div class="ellipse"></div>
</div> 
</a>

<a class={variant + " "  + size} href="#">
    <div id="container">
        <img src="../public/assets/Arrow.svg" alt="Pil">
        <slot />
        <div class="ellipse"></div>
        <div class="glass"></div>
        <div class="mask"></div>
        <div class="gradient"></div>
    </div>
</a>
    
<style>
    .container {
        color: white;
        border-radius: 100px;
        font-family: "noto-sans", sans-serif;
        font-size: 2rem;
        font-style: normal;
        font-weight: 500;
        line-height: 150%; /* 54px */
        letter-spacing: 1.44px;
        color: var(--text-color); 
        display: inline-block;
        border: 4px solid var(--text-color);
        padding: 1% 8% 1% 3%;
        position: relative;
        z-index: 2;
    }
    img{
        width: 40px;
        height: 40px;
        border-radius: 100%;
        position: absolute;
        left: 82%;
        top: 20%;
        transition-duration: .2s;
    }
    .ellipse{
        width: 80px;
        height: 80px;
        border-radius: 100px;
        background-image: var(--CallToAction-color);
        transition-duration: .2s;
        position: absolute;
        left: 75%;
        top: -2.5%;
        z-index: -1;
    }
    .container:hover > .ellipse{
        width: 327px;
        left: -1%;
        transition-duration: .2s;
    }
    
</style>